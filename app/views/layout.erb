<!DOCTYPE html>

<html>
  <head>
    <title>Chef's Recipe Index</title>
  </head>
  <body>
    <nav>
      <% if logged_in? %>

        Hello, <%=current_user.name %>  |  <a href="/recipes/new"> Create Recipe </a>  |  <a href="/logout"> Log Out </a>
        

      <% else %>
        <a href="/signup">Sign Up</a>
        <a href="/login"> Log In </a>
      <%end %>

    </nav>
    <div class="container">
      <% if !@error_message.nil? %>
      <div class="alert alert-warning">
        <%= @error_message %>
      </div>
    <% end %>
      <%= yield %>
    </div>
  </body>
</html>
