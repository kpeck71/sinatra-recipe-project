<h3>Edit Your Recipe</h3>
<form action="/recipes/<%=@recipe.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: </label><input type="text" name="recipe[name]" value="<%=@recipe.name%>">
  <br></br>
  <label>Ingredients: </label><input type="text" name="recipe[ingredients]" value="<%=@recipe.ingredients%>">
  <br></br>
  <label><strong>Category: </p><%Category.all.each do |category|%></strong></label>
  <input type="checkbox" name="recipe[category_ids][]" value="<%= category.id %>"<%='checked' if @recipe.categories.include?(category) %>><%=category.name%> | </input>
  <%end%>

<p>And/or Create New Category: <input type="text" name="category[name]" id="new_category"></input></p>
  <input class="btn" type ="submit" value="Update Recipe">
</form>
