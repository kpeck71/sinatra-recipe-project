<h3><%=@recipe.name%></h3>
<label>Ingredients: </label>
<p><%=@recipe.ingredients%></p>

<label>Categories:</label>
<p><%@recipe.categories.each do |category|%></p>
<a href="/categories/<%=category.slug%>"><%=category.name%></a>

<label>Chef: </label>
<p><a href="/users/<%=@recipe.user.slug%>"><%=@recipe.user.name%></a></p>

<%end%>

<%if current_user.id == @recipe.user_id%>
<br></br>
<input type="button" value="Edit Your Recipe" onclick="window.location.href='/recipes/<%=@recipe.slug%>/edit'">
<br></br>
  <form action="/recipes/<%=@recipe.slug%>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Recipe">
  </form>
  <% else %>
  <p>
<%end%>
